{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2017"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lynkify/backend/src/trpc/router": [
        "../backend/src/trpc/router"
      ],
      "@lynkify/shared": [
        "../shared/src"
      ]
    },
    "composite": false,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "*.mjs",
    "*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../backend"
    }
  ]
}
